<div id='categories_show'>
<h1><%= @store %></h1>

<hr>

<h2><%= @category.title %></h2>

<% @category.products.each do |product| %>

  <%= link_to store_product_path(@store, product) do %>
    <div class="products span3">
      <p><%= image_tag generate_image_url(300, product.id) %></p>
      <p><%#= image_tag product.image.url(:thumbnail) %></p>
      <h5><%= product.title.titleize %></h5>
        <p><%= t('product.price') %>: <%= number_to_currency(product.price) %></p>
    </div>
  <% end %>
<% end %>

</div>
