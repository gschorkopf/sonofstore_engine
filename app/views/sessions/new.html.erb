<div class="login-form">
  <h2><%= 'Login' %></h2>
  <hr>
  <%= simple_form_for :sessions, :url => sessions_path, method: 'POST' do |f| %>
    <%= f.input :email, input_html: { placeholder: 'example@example.com' } %>
    <%= f.input :password %>
    <%= f.button :submit, 'Login', class:"btn btn-custom-lighten" %>
  <% end %>

  <%= link_to 'Create an Account', signup_path %>

</div>
