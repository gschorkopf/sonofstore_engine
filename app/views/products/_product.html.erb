<%= link_to store_product_path(current_store, product) do %>
  <div class="products span3">
    <!%= image_tag product.image.url(:thumbnail), class: "img-rounded" %>
    <%= image_tag generate_image_url(200, product.id), class: "img-rounded" %>

    <h5><%= product.title.titleize %></h5>
    <%= 'Price' %>: <%= number_to_currency(product.price) %>
  </div>
<% end %>

