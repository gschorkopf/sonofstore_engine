<% if logged_in? %>
  <%= form_tag buy_now_path, id: "buyNowForm" do %>
    <%= hidden_field_tag 'order', product.id.to_s %>
    <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
            data-key="pk_test_osSOH0LyEEACshdRsLjyvGSz"
            data-image="/assets/marcy_stripe.png"
            data-name="<%= 'Team Ballmer' %>"
            data-label="<%= 'Buy Now' %>"
            data-amount="<%= product.current_price * 100 %>">
    </script>

  <% end %>
<% else %>
  <%= button_to 'Buy Now', login_path, class: 'btn btn-primary', method: :get %>
<% end %>
