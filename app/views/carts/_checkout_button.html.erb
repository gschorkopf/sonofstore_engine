<% if current_user && current_user.customer.shipping_address && current_user.customer.billing_address && current_user.customer.credit_card %>
  <%= button_to "checkout", store_new_order_path(current_store, current_user), class: "btn btn-custom-lighten", method: :get %>
<% elsif current_user %>
  <%= button_to "Checkout", new_store_checkout_path(current_store), class: "btn btn-custom-lighten", method: :get, :message => "Please enter your shipping, billing and credit card information before you checkout" %>
<% else %>
  <%= button_to "Checkout", new_store_checkout_path(current_store), class: 'btn btn-custom-lighten', method: :get %>
<% end %>


