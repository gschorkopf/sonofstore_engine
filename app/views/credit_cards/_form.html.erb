<% if current_user %>
  <%= simple_form_for [ @customer, @credit_card], url: customer_credit_cards_path, html: {multipart: true} do |f| %>

    <%= f.input :number, input_html: { placeholder: 'XXXXXXXXXXXXXXXX' } %>
    <%= f.input :expiration_month, input_html: { placeholder: 'MM' } %>
    <%= f.input :expiration_year, input_html: { placeholder: 'YYYY' } %>
    <%= f.input :security_code, input_html: { placeholder: '###' } %>

    <%= f.button :submit, 'submit', class:'btn btn-custom-lighten' %>
  <% end %>
<% else %>
  <%= simple_form_for [@customer, @credit_card], url: customer_credit_cards_path, html: {multipart: true} do |f| %>

    <%= f.input :number, input_html: { placeholder: 'XXXXXXXXXXXXXXXX' } %>
    <%= f.input :expiration_month, input_html: { placeholder: 'MM' } %>
    <%= f.input :expiration_year, input_html: { placeholder: 'YYYY' } %>
    <%= f.input :security_code, input_html: { placeholder: '123' } %>

    <%= f.button :submit, 'submit', class:'btn btn-custom-lighten' %>
  <% end %>
<% end %>
