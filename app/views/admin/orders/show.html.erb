<div class="admin-order-show">
  <%= render partial: 'shared/admin_navigation', locals: { active: false } %>

  <div class="span8">
    <h1><%= 'Order' %> #<%= @order.id %></h1>
    <span class="label default"><%= @order.status %></span>
    <%= render partial: 'next_status_button', locals: { order: @order } %>
    <hr>
    <p><%= 'Created At' %>: <%= @order.created_at.to_s(:short) %></p>
    <p><%= 'Updated At' %>: <%= @order.updated_at.to_s(:short) %></p>
    <p><%= 'Purchaser Name' %>: <%= @order.customer.full_name %></p>
    <p><%= 'Purchaser Email' %>: <%= @order.customer.email %></p>
    <h2> <%= 'Products' %> </h2>
    <table class="table">
      <thead>
      <th><%= current_store %></th>
      <th><%= 'Title' %></th>
      <th><%= 'Quantity' %></th>
      <th><%= 'Unit Price' %></th>
      <th><%= 'Subtotal' %></th>
      </thead>
      <tbody>
      <%= render partial: 'order_item', collection: @order.order_items %>
      </tbody>
      <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td style="text-align: right;"><%= 'Total' %></td>
        <td><%= number_to_currency(@order.total) %></td>
      </tr>
      </tfoot>
    </table>
  </div>
</div>
