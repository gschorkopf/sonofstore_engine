<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Remove Role</th>
  </thead>

  <tbody>
  <% @store_users.each do |user| %>
    <tr>
      <td><%= user %></td>
      <td><%= user.customer.email %></td>
      <td><%= user.role_to_s(store) %></td>
      <% if store.user_roles.collect{|r| r.role == "store_admin" }.length > 1 %>
        <td><%= link_to 'Remove', store_admin_user_path(store, user), method: :delete, confirm: "Are you sure you want to remove #{user}'s #{user.role(store)} privileges?" %></td>
      <% else %>
        <td>One admin minimum</td>
      <% end %>
    </tr>
  <% end %>
  </tbody>

  <tfoot>
  </tfoot>

</table>
