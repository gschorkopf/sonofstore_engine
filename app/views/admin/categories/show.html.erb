
  <% @category.products.each do |product| %>
    <%= link_to store_product_path(current_store, product) do %>
    <div class="products span3">
      <p><%= image_tag product.photo_url %></p>
      <p><%= image_tag product.image.url(:thumbnail) %></p>
      <h5><%= product.title.titleize %></h5>
      <p><%= 'product.price' %>: <%= number_to_currency(product.price) %></p>
    </div>
    <% end %>
  <% end %>
