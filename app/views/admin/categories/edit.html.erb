<div class="admin-category-new">
  <%= render partial: 'shared/admin_navigation', :locals => { active: false } %>

  <div class="span8">
    <h2><%= 'categories.create' %></h2>
    <hr>
    <%= simple_form_for [@store, :admin, @category] do |f| %>
      <%= f.input :title, input_html: { placeholder: 'placeholder.category.title' } %>
      <%= f.hidden_field :store_id, value: @store.id %>
      <%= f.button :submit, 'submit', class:'btn btn-custom-lighten' %>
    <% end %>
  </div>
</div>
