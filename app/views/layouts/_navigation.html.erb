<% cache('top_left_logo') do %>

  <div class="logo">
    <%= link_to(image_tag('toylogo2.png'), root_path, :class => 'brand') %>
  </div>

  <div class="logo-text">
    <%= link_to "Ballmerino's", root_path, :class => 'brand' %>
  </div>

<% end %> <!-- end of caching block -->

<div id='welcome_user'>
  <% if logged_in? %>
    <p id="signature">Welcome, <%= current_user %></p>
  <% elsif request.fullpath == root_path %>
    <p id="signature">The Marketplace for Toys!</p>
  <% end %>
</div>

<div class="nav-buttons">
  <ul class="nav pull-right">
    <% if logged_in? %>
      <li><%= render 'layouts/admin_button' %></li>
      <li><%= render 'layouts/logout_button' %></li>
      <li><%= link_to "Profile", profile_path %></li>
    <% else %>
        <li><%= link_to 'Login', login_path  %></li>
        <li><%= link_to 'Sign Up', signup_path %></li>
    <% end %>
    <li>
      <% if current_store %>
        <%= button_to "#{t 'navigation.cart'} #{current_cart.count}", store_cart_path(current_store), class: 'btn btn-custom-lighten', method: :get %>
      <% end %>
    </li>
</ul>
