<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= current_store ? current_store : "Ballmer's DoSE" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag "/favicon.ico?1" %>
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:400,700,400italic' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <% if request.fullpath == root_path %>
      <%= render partial: 'layouts/index', locals: { stores: @stores } %>
    <% else %>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        </div> <!--! end of content-->
    <% end %>
        <% cache('footer') do %>
        <div id="footer">
          <%= link_to(image_tag('github_25.png'), '/code', id: 'github') %>
          <a href="/code">View the Source Code</a>
          <br>
          <%= image_tag("twitter-icon.png", :alt => "Tweet us:") %>
          <a href="http://www.twitter.com/adventuresteady">Laura</a> /
          <a href="#">Elaine</a> /
          <a href="#">Kyle</a> /
          <a href="#">Aimee</a>
        </div>
        <% end %> <!-- end of footer caching -->

      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
