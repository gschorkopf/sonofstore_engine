<div class="order-show">
  <%= render partial: '/users/user_navigation', :locals => { active: false } %>

  <div class="span8">

    <h1><%= 'Order' %> #<%= @order.id %></h1>
    <p><%= 'Created At' %> <%= @order.created_at.to_s(:short) %></p>
    <span class="label default"><%= @order.status %></span> <%= 'as of' %> <%=@order.updated_at.to_s(:short) %>
    <br>
    <br>

    <table class="table table-striped">
      <thead>
        <th><%= "Store" %></th>
        <th><%= 'Product Name' %></th>
        <th><%= 'Quantity' %></th>
        <th><%= 'Unit Price' %></th>
        <th><%= 'Subtotal' %></th>
      </thead>
      <tbody>
        <%= render partial: 'order_item', collection: @order.order_items %>
      </tbody>
      <tfoot>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td style="text-align: right;"><%= 'Total' %>:</td>
          <td><%= number_to_currency(@order.total) %></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
